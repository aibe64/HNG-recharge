<div class="card card-body mt-3">
  <h3 class="text-center text-primary text-uppercase">Edit Idea</h3>
  {{#internProfile}}
    <form action="/update/{{id}}" method="POST">
      <div class="form-group">
        <label for="name">Name</label>
        <input class="form-control" type="text" name="name" value="{{name}}">
      </div>
      <div class="form-group">
        <label for="track">Track</label>
        <input class="form-control" type="text" name="track" value="{{track}}">
      </div>
      <div class="form-group">
        <label for="title">Number</label>
        <input type="phone" class="form-control" name="phone" value="{{phone}}">
      </div>
      <button class="btn btn-primary d-block mx-auto mt-4 py-2 w-50" type="submit">submit</button>
    </form>
  {{/internProfile}}
</div>
