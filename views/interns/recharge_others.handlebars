<div class="card card-body border-primary mt-3">
  <h4 class="text-center text-primary text-uppercase m-4">Recharge Anyone</h4>
  <div class="row d-flex justify-content-between mb-4">
    <p class="col-6 text-center"><a href="/"><span class="mr-1">&LeftArrow;Home</span></a></p>
    <p class="col-6 text-center"><a href="/interns"><span class="mr-1">&euro; Recharge intern</span></a></p>
  </div>
  <form class="mt-3" action="/recharge_others" method="post">
    <div class="form-group">
      <label for="code">NETWORK PROVIDER</label>
      <select class="form-control" type="text" name="code">
          {{#networks}}
            <option>{{Code}}</option>
          {{/networks}}
      </select>
    </div>
    <div class="form-group">
      <label for="amount">AMOUNT</label>
      <input type="number" class="form-control" name="amount">
    </div>
    <div class="form-group">
      <label for="phone">PHONE</label>
      <input type="phone" class="form-control" name="phone" value="">
    </div>
    <button class="btn btn-primary d-block mx-auto mt-4 py-2 w-50" type="submit">RECHARGE</button>
  </form>
</div>